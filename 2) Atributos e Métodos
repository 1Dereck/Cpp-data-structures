//üëâ Pensa assim:
//Atributo = caracter√≠stica do bolo (ex.: sabor, tamanho).
//M√©todo = a√ß√£o do bolo (ex.: mostrar sabor, mostrar tamanho).

#include <iostream>
#include <string>
using namespace std;

class ReceitaDeBolo {
public:
    string sabor;  // caracter√≠stica (atributo)
    int tamanho;   // caracter√≠stica (atributo)

    void mostrarBolo() { // a√ß√£o (m√©todo)
        cout << "Bolo de " << sabor << " com tamanho " << tamanho << "\n";
    }
};

int main() {
    ReceitaDeBolo bolo;     // Fiz um bolo
    bolo.sabor = "chocolate"; // Dei sabor
    bolo.tamanho = 25;        // Dei tamanho

    bolo.mostrarBolo();       // Mostrei como ele ficou
    return 0;
}


//Atributos = caracter√≠sticas (sabor, tamanho).
//M√©todos = a√ß√µes (mostrarBolo).
//bolo.sabor = "chocolate"; ‚Üí dei sabor ao bolo.
//bolo.mostrarBolo(); ‚Üí mandei o bolo ‚Äúse mostrar‚Äù.
