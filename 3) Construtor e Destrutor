//ðŸ‘‰ Pensa assim:
//Construtor = quando o bolo nasce (jÃ¡ sai do forno com sabor e tamanho).
//Destrutor = quando o bolo vai embora (Ã© jogado fora ou comido, some da memÃ³ria).

#include <iostream>
#include <string>
using namespace std;

class ReceitaDeBolo {
public:
    string sabor;
    int tamanho;

    // Quando o bolo nasce (construtor)
    ReceitaDeBolo(string s, int t) : sabor(s), tamanho(t) {
        cout << "Saiu do forno um bolo de " << sabor << "!\n";
    }

    // Quando o bolo vai embora (destrutor)
    ~ReceitaDeBolo() {
        cout << "O bolo de " << sabor << " acabou.\n";
    }
};

int main() {
    {
        ReceitaDeBolo bolo("morango", 30); // bolo nasce
        // bolo.mostrarBolo(); erro: nÃ£o fiz mÃ©todo mostrarBolo aqui ainda
        cout << "Esse bolo tem tamanho " << bolo.tamanho << "\n";
    } // bolo vai embora aqui (quando sai do bloco)

    cout << "Fim do programa.\n";
    return 0;
}

//Construtor = bolo jÃ¡ nasce do forno pronto (com sabor e tamanho).
//Destrutor = bolo acaba (quando sai do bloco ou o programa termina).
//ReceitaDeBolo(string s, int t) : sabor(s), tamanho(t) â†’ bolo jÃ¡ nasce configurado.
